---
interface Props {
  class?: string;
  variant?: 'default' | 'bronze' | 'silver' | 'gold' | 'platinum' | 'green';
}

const { class: className = '', variant = 'default' } = Astro.props;

const variantStyles = {
  default: 'border-geodot-primary-light/20',
  bronze: 'border-bronze/30',
  silver: 'border-silver/40',
  gold: 'border-gold/40',
  platinum: 'border-platinum/50',
  green: 'border-env-green/30 bg-gradient-to-br from-env-green/15 to-geodot-primary/12',
};
---

<div class:list={["card p-6", variantStyles[variant], className]}>
  <slot />
</div>

