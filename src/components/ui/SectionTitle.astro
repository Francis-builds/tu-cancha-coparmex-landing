---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = true } = Astro.props;
---

<div class:list={["mb-12", centered && "text-center"]}>
  <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-4 text-gradient">
    {title}
  </h2>
  {subtitle && (
    <p class="text-base md:text-lg text-foreground-muted max-w-3xl mx-auto">
      {subtitle}
    </p>
  )}
</div>

