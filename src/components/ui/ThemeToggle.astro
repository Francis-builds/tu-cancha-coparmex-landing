---
// Theme Toggle Component
// Allows users to switch between light and dark mode
// Respects system preference by default
---

<button
  id="theme-toggle"
  type="button"
  class="p-2 rounded-lg text-foreground-muted hover:text-foreground hover:bg-geodot-primary-light/10 transition-colors"
  aria-label="Cambiar tema"
  title="Cambiar tema"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    id="theme-icon-light"
    class="w-5 h-5 hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    ></path>
  </svg>
  <!-- Moon icon (shown in light mode) -->
  <svg
    id="theme-icon-dark"
    class="w-5 h-5 hidden"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    ></path>
  </svg>
  <!-- System icon (shown when following system preference) -->
  <svg
    id="theme-icon-system"
    class="w-5 h-5"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
    ></path>
  </svg>
</button>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  const iconLight = document.getElementById('theme-icon-light');
  const iconDark = document.getElementById('theme-icon-dark');
  const iconSystem = document.getElementById('theme-icon-system');

  // Get current effective theme (what's actually displayed)
  function getEffectiveTheme(): 'light' | 'dark' {
    const stored = localStorage.getItem('theme');
    if (stored === 'light') return 'light';
    if (stored === 'dark') return 'dark';
    return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
  }

  // Get stored preference
  function getStoredPreference(): 'light' | 'dark' | 'system' {
    const stored = localStorage.getItem('theme');
    if (stored === 'light') return 'light';
    if (stored === 'dark') return 'dark';
    return 'system';
  }

  // Update icon visibility based on current preference
  function updateIcons() {
    const preference = getStoredPreference();
    iconLight?.classList.toggle('hidden', preference !== 'dark');
    iconDark?.classList.toggle('hidden', preference !== 'light');
    iconSystem?.classList.toggle('hidden', preference !== 'system');
  }

  // Apply theme to document
  function applyTheme(theme: 'light' | 'dark' | 'system') {
    // Add transition class for smooth theme change
    document.documentElement.classList.add('theme-transition');

    if (theme === 'system') {
      document.documentElement.removeAttribute('data-theme');
      localStorage.removeItem('theme');
    } else {
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    }

    // Remove transition class after animation completes
    setTimeout(() => {
      document.documentElement.classList.remove('theme-transition');
    }, 300);
  }

  // Cycle through themes: system -> light -> dark -> system
  function cycleTheme() {
    const current = getStoredPreference();
    let next: 'light' | 'dark' | 'system';

    if (current === 'system') {
      next = 'light';
    } else if (current === 'light') {
      next = 'dark';
    } else {
      next = 'system';
    }

    applyTheme(next);
    updateIcons();
  }

  // Initialize
  updateIcons();

  // Handle click
  themeToggle?.addEventListener('click', cycleTheme);

  // Listen for system preference changes
  window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', () => {
    if (getStoredPreference() === 'system') {
      // Just trigger a re-render if following system
      updateIcons();
    }
  });
</script>
