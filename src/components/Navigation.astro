---
import ThemeToggle from './ui/ThemeToggle.astro';

const navItems = [
  { href: '#magnitud', label: 'Proyecto' },
  { href: '#profepa', label: 'PROFEPA' },
  { href: '#paquetes', label: 'Paquetes' },
  { href: '#roi', label: 'ROI' },
  { href: '#contacto', label: 'Contacto' }
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-geodot-primary-light/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="#" class="flex items-center gap-3">
        <img src="/images/logos/coparmex-logo-white.png" alt="COPARMEX" class="h-8 w-auto logo-adaptive" />
        <span class="hidden sm:block text-sm font-semibold text-foreground">Tu Cancha COPARMEX</span>
      </a>
      
      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="px-4 py-2 text-sm text-foreground-muted hover:text-foreground transition-colors rounded-lg hover:bg-geodot-primary-light/10"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Theme Toggle, CTA & Mobile Menu -->
      <div class="flex items-center gap-2">
        <ThemeToggle />

        <a
          href="#contacto"
          class="hidden sm:inline-flex px-5 py-2 text-sm font-medium bg-gradient-to-r from-geodot-primary to-geodot-primary-light text-white rounded-full hover:shadow-lg hover:shadow-geodot-primary/30 transition-all"
        >
          Patrocinar
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 text-foreground-muted hover:text-foreground"
          aria-label="Abrir menÃº"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-background border-t border-geodot-primary-light/10">
    <div class="px-4 py-3 space-y-1">
      {navItems.map((item) => (
        <a 
          href={item.href}
          class="block px-4 py-3 text-foreground-muted hover:text-foreground hover:bg-geodot-primary-light/10 rounded-lg transition-colors"
        >
          {item.label}
        </a>
      ))}
      <a 
        href="#contacto"
        class="block px-4 py-3 mt-2 text-center font-medium bg-gradient-to-r from-geodot-primary to-geodot-primary-light text-white rounded-lg"
      >
        Patrocinar
      </a>
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>

