---
import SectionTitle from '../ui/SectionTitle.astro';
import Card from '../ui/Card.astro';

const benefits = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
      <circle cx="12" cy="12" r="4"/>
    </svg>`,
    title: 'Liderazgo Ambiental',
    description: 'Ser pionero en el Mundial más sustentable de la historia, con certificación federal verificable'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="12" y1="20" x2="12" y2="10"/>
      <line x1="18" y1="20" x2="18" y2="4"/>
      <line x1="6" y1="20" x2="6" y2="16"/>
    </svg>`,
    title: 'Impacto Medible',
    description: '200K+ asistentes presenciales + promoción en base COPARMEX y medios propios con métricas verificadas por Geodot'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
      <circle cx="9" cy="7" r="4"/>
      <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
      <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
    </svg>`,
    title: 'Red Institucional',
    description: 'Asociación con COPARMEX, PROFEPA, y 5 alcaldías de CDMX en el marco del Mundial 2026'
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
      <polyline points="14 2 14 8 20 8"/>
      <line x1="16" y1="13" x2="8" y2="13"/>
      <line x1="16" y1="17" x2="8" y2="17"/>
      <polyline points="10 9 9 9 8 9"/>
    </svg>`,
    title: 'Material para Reportes ESG',
    description: 'Métricas certificadas y contenido verificable para reportes de sustentabilidad corporativos'
  }
];
---

<section id="beneficios" class="py-20 md:py-28 px-6">
  <div class="max-w-6xl mx-auto">
    <SectionTitle 
      title="Qué Significa para tu Empresa"
      subtitle="Posicionamiento estratégico en el evento deportivo más importante del mundo"
    />
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
      {benefits.map((benefit) => (
        <Card class="p-7 md:p-8">
          <div class="w-12 h-12 text-geodot-primary-light mb-5" set:html={benefit.icon} />
          <h3 class="text-xl md:text-2xl font-bold mb-3 text-foreground">
            {benefit.title}
          </h3>
          <p class="text-sm md:text-base text-foreground-muted leading-relaxed">
            {benefit.description}
          </p>
        </Card>
      ))}
    </div>
  </div>
</section>

